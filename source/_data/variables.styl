// 中文字体
$font-family-chinese      = "Hiragino Sans GB", "Microsoft YaHei Light", "Microsoft YaHei", "Source Han Sans CN", "WenQuanYi Micro Hei"
// <body> 中全局文字颜色
$text-color                     = #1a2a3a

// 链接颜色
$link-color                     = #0593d3
$link-hover-color               = #fc6423

// 选中文字颜色
$selection-bg                   = rgb(255, 241, 89)
$selection-color                = #555

// 代码和代码块
$code-border-radius             = 5px

// 按钮
$btn-default-color              = #1a2a3a;
$btn-default-border-color       = #2a3a4a

// 页面底部页码
$pagination-link-hover-color    = $link-hover-color

$pagination-active-bg           = #4a5a6a
$pagination-active-border       = #4a5a6a

// Site Meta
$brand-color                    = #f2f2f6
$brand-hover-color              = #f2f2f6
$brand-bg                       = black

$site-subtitle-color            = #f1f2f6
$subtitle-color                 = #f2f1f6


// Sidebar
$sidebar-nav-color                    = rgb(80, 115, 184)
$sidebar-nav-hover-color              = rgb(161, 102, 171)

$site-author-name-color               = #405170

$site-description-color               = rgb(243, 112, 85)
$site-description-margin-top          = 15px

$toc-link-color                       = $text-color
$toc-link-hover-color                 = $link-hover-color
$toc-link-hover-border-color          = $link-hover-color
$toc-link-active-color                = $link-hover-color
$toc-link-active-border-color         = $link-hover-color
$toc-link-active-current-color        = $link-hover-color
$toc-link-active-current-border-color = $link-hover-color

// Back to top
$b2t-color                      = $text-color
$b2t-bg-color                   = rgba(247, 149, 51, 0.75)
$b2t-sidebar-bg-color           = rgba(247, 149, 51, 0.75)

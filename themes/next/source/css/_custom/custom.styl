// 右下角返回顶部按钮样式
.back-to-top {
    line-height: 1.5;
    right: 10px;
    padding-right: 5px;
    padding-left: 5px;
    padding-top: 2.5px;
    padding-bottom: 2.5px;
    border-radius: 5px;
    box-shadow: 0px 0px 10px 0px #aaaaaa;
}
.back-to-top.back-to-top-on {
    bottom: 10px;
}
//侧栏
.menu .menu-item a {
    color: rgb(80, 115, 184);
}
.menu .menu-item a:hover {
    color: rgb(161, 102, 171);
}
.header-inner {
    border-bottom-left-radius: 5px;
    border-bottom-right-radius: 5px;
}
// 侧栏站点描述
.site-description {
    font-family: 'Seaweed Script'
    letter-spacing: 5px;
    font-weight: bold;
    margin-left: 13px;
}

.site-meta {
    background: #000000;
}

// 侧栏站点文章、分类、标签
.site-state-item {
    padding: 0px 15px;
    border-left: 1.5px solid rgb(161, 102, 171);
}
// 侧栏社交链接
.links-of-author {
    margin-top: 0px;
}
links-of-author-item .exturl, .links-of-author-item a {
    padding: 0 20px;
}

// 侧栏超链接样式
.sidebar a {
    color: #1a2a3a
    border-bottom: none;
}
.sidebar a:hover {
    border-bottom-width: 2px;
    border-bottom-style: solid;
    border-bottom-color: rgb(161, 102, 171);
}
// 文章页侧栏
.sidebar-inner {
    border-radius: 5px;
}
// 时间轴左边线条
.posts-collapse::after {
    margin-left: -2px;
    background-image: linear-gradient(180deg,#f79533 0,#f37055 15%,#ef4e7b 30%,#a166ab 44%,#5073b8 58%,#1098ad 72%,#07b39b 86%,#6dba82 100%);
}
// 时间轴文章标题
.posts-collapse .post-title a {
    color: #0593d3;
}
.posts-collapse .post-title a:hover {
    color: #fc6423;
}
// 时间轴文章标题底部虚线
.posts-collapse .post-header:hover {
    border-bottom-color: rgb(161, 102, 171);
}
// 本地搜索框
.local-search-popup .search-icon, .local-search-popup .popup-btn-close {
    color: rgb(247, 149, 51);
}
.local-search-popup .popup-btn-close {
    border-left: none;
}

/* 设置滚动条的样式 */
/* 参考https://segmentfault.com/a/1190000003708894 */
::-webkit-scrollbar {
    width: 5px;
    height: 5px;
}
/* 滚动槽 */
::-webkit-scrollbar-track {
    background: #eee;
}
/* 滚动条滑块 */
::-webkit-scrollbar-thumb {
    border-radius: 5px;
    background-color: #ccc;
}
::-webkit-scrollbar-thumb:hover {
    background-color: rgb(247, 149, 51);
}
// 自定义emoji样式
img#github-emoji {
    margin: 0px;
    padding: 0px;
    display: inline !important;
    vertical-align: text-bottom;
    border: none;
    cursor: text;
    box-shadow: none;
}

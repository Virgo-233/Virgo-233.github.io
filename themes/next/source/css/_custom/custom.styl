// Custom styles.
code {
    color: #ff7600;
}
// 文章```代码块顶部样式
.highlight figcaption {
    margin: 0em;
    padding: 0.5em;
    border-bottom: 1px solid #e9e9e9;
}
.highlight figcaption a {
    color: rgb(80, 115, 184);
}

// 主页文章
 .post {
   margin-top: 60px;
  }
// 文章圆角
.post-block {
    border-radius: 5px;
}
#posts>article+article .post-block {
    border-radius: 5px;
}
//热评文章
.ds-top-threads li a {
    padding-left: 5px;
    transition: border-width 0.2s linear 0s, color 0.2s linear 0s;
    border-bottom: none;
}
.ds-top-threads li a:hover {
    border-left: 8px solid #4d768c;
}
//首页尾部样式
.footer {
    background: none;
    font-size: 16px;
}
.footer-inner {
    font-family: 'Comic Sans MS','Playball';
    text-align: center;
    color: rgb(80, 115, 184);
}
//一言
#lwlhitokoto {
    color: rgb(243, 112, 85);
    }

// 文章标题字体
.posts-expand .post-title {
    font-size: 26px;
    font-weight: 700;
}
// 文章标题动态效果
.posts-expand .post-title-link::before {
    background-image: linear-gradient(90deg, #a166ab 0%, #ef4e7b 25%, #f37055 50%, #ef4e7b 75%, #a166ab 100%);
}
// 文章内链接文本样式
.post-body a{
    border-bottom: none;
  &:hover {
    border-bottom: 1px solid #fc6423;
  }
}

// 页面底部页码
.pagination {
    background: rgba(255, 255, 255, 0);
    box-shadow: none;
}
.pagination .page-number.current {
    border-radius: 100%;
}
.pagination .next, .pagination .page-number, .pagination .prev {
    margin-bottom: 10px;
    border: none;
}
// 文章元数据（meta）留白更改
.posts-expand .post-meta {
    margin: 10px 0px 20px 0px;
}
// [Read More]按钮样式
.post-button .btn {
    font-size: 15px;
    box-shadow: inset 0px 0px 10px 0px #aaaaaa;
    border-bottom: 2px solid #2a3a4a;
}
.post-button .btn:hover {
    color: #fff;
    background-image: linear-gradient(90deg, #a166ab 0%, #ef4e7b 25%, #f37055 50%, #ef4e7b 75%, #a166ab 100%);
    border-bottom: 2px solid #2a3a4a;
}

//相关文章
.popular-posts-header {
    margin-top: 0px;
}
.post-body .note {
    margin-bottom: 5px;
}
// 文章底部的tags
.posts-expand .post-tags {
    margin-top: 0px;
}
.posts-expand .post-tags a {
    border-bottom: none;
    margin-right: 0px;
    padding: 0px 5px;
    border-radius: 5px;
}
.posts-expand .post-tags a:hover {
    background: #eee;
}
// 文章底部留白更改
.post-widgets {
    margin-top: 0px;
}
// 文章底部页面跳转
.post-nav-item a {
    font-weight: bold;
}
.post-nav-item a:hover {
    font-weight: bold;
}
